# Environment Configuration
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Google ADK Configuration
# ADK_API_KEY=your_adk_api_key_here
# ADK_PROJECT_ID=your_project_id
# ADK_REGION=us-central1

# Upload Configuration
MAX_FILE_SIZE=52428800  # 50MB in bytes
UPLOAD_DIR=uploads

# Session Configuration
SESSION_TIMEOUT=3600  # 1 hour in seconds

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
BIGQUERY_DATASET_ID=your-dataset-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_EXPIRATION_HOURS=24

# Observability Configuration (Langfuse)
LANGFUSE_ENABLED=true
# For local self-hosted Langfuse, use: http://localhost:3000
# For cloud Langfuse, use: https://cloud.langfuse.com
LANGFUSE_HOST=https://us.cloud.langfuse.com
# Get these from your Langfuse project settings
LANGFUSE_PUBLIC_KEY=pk-lf-df0fbfad-fcfa-4ab4-910a-2799dbf9e74a
LANGFUSE_SECRET_KEY=sk-lf-8d304667-8c10-451a-adf6-a2b38522b429

# Privacy Settings
TRACK_USER_QUERIES=true
ANONYMIZE_USER_DATA=false
# Comma-separated patterns to exclude from tracking
EXCLUDE_TRACKING_PATTERNS=password,secret,key

# Debug Settings
LANGFUSE_DEBUG=false
APP_VERSION=1.0.0